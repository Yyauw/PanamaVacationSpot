<% layout('layouts/boilerplate') %> 
    <h1>Edit spot</h1>
    <form action="/spots/<%= spot._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">title</label>
            <input type="text" name="spot[title]" id="title" value="<%= spot.title%>">
        </div>
        <div>
            <label for="location">location</label>
            <input type="text" name="spot[location]" id="location" value="<%= spot.location%>">
        </div>
        <button>Update spot</button>
    </form>
    <a href="/spots/<%= spot._id%>">Go back</a>
